#!/usr/bin/env bash

# expects your app in myapp_a/ and myapp_b/
app="myapp"

# runs at startup
start_script="index.js"

# bind to this IP
host="127.0.0.1"
# bind to this port
port_a="3001"
port_b="3002"

# log files generated by foreverjs, path relative to the app dir
log_forever="forever.log" # forever -l
log_out="out.log"         # forever -o
log_error="error.log"     # forever -e